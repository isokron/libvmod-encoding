varnishtest "Test encoding vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import std;
	import encoding from "${pwd}/../.libs/libvmod_encoding.so";

	sub vcl_deliver {
		set resp.http.foo = encoding.b64encode(req.http.foo);
		set resp.http.bar = encoding.b64decode(resp.http.foo);
	}
} -start

client c1 {
	txreq -url "/" -hdr "Foo: hello you"
	rxresp
	expect resp.http.bar == "hello you"
} -run
